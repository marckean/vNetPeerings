{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "peerArray": {
        "type": "array",
        "defaultValue": [
            {
              "peer": {
                "fromvNet": "T1vNet", "remoteVirtualNetwork": "T2vNet01", "useRemoteGateways": false, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T1vNet", "remoteVirtualNetwork": "T2vNet02", "useRemoteGateways": false, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T2vNet01", "remoteVirtualNetwork": "T1vNet", "useRemoteGateways": false, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T2vNet02", "remoteVirtualNetwork": "T1vNet", "useRemoteGateways": false, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T2vNet01", "remoteVirtualNetwork": "T3-TransitHubvNet", "useRemoteGateways": true, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T2vNet02", "remoteVirtualNetwork": "T3-TransitHubvNet", "useRemoteGateways": true, "allowGatewayTransit": false
              }
            },
            {
              "peer": {
                "fromvNet": "T3-TransitHubvNet", "remoteVirtualNetwork": "T3-TransitHubvNet", "useRemoteGateways": false, "allowGatewayTransit": true
              }
            },
            {
              "peer": {
                "fromvNet": "T3-TransitHubvNet", "remoteVirtualNetwork": "T3-TransitHubvNet", "useRemoteGateways": false, "allowGatewayTransit": true
              }
            }
        ],
        "metadata": {
            "description": "Array of vNet peers. See defaultValue for example."
        }
      }
    },
    "variables": {
    },
    "resources": [
      {
        "apiVersion": "2017-10-01",
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "name": "[concat(parameters('peerArray')[copyIndex()].peer.fromvNet, '/peering-to-', parameters('peerArray')[copyIndex()].peer.remoteVirtualNetwork)]",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "peercopy",
          "count": "[length(parameters('peerArray'))]",
          "mode": "Serial",
          "batchSize": 1
        },
        "properties": {
          "allowVirtualNetworkAccess": true,
          "allowForwardedTraffic": false,
          "allowGatewayTransit": "[parameters('peerArray')[copyIndex()].peer.allowGatewayTransit]",
          "useRemoteGateways": "[parameters('peerArray')[copyIndex()].peer.useRemoteGateways]",
          "remoteVirtualNetwork": {
            "id": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('peerArray')[copyIndex()].peer.remoteVirtualNetwork)]"
          }
        }
      }
    ],
    "outputs": {
    }
  }